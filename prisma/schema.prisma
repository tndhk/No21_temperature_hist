generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

/// 温度履歴テーブル
model TemperatureHistory {
  id         BigInt   @id @default(autoincrement())
  date       DateTime @unique
  tempHigh   Float
  tempLow    Float
  tempAvg    Float
  tempAvg7   Float
  tempHigh7  Float
  tempLow7   Float
  source     String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@index([date])
}

/// 既存のSupabaseテーブル（無視）
model CountryArrivals {
  id    BigInt @id @default(autoincrement())
  // 他のフィールドは定義せず、テーブルの存在のみ認識
  @@ignore
}

model CountryExpenditure {
  id    BigInt @id @default(autoincrement())
  @@ignore
}

model YearlyArrivals {
  id    BigInt @id @default(autoincrement())
  @@ignore
} 